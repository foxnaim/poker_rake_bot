# development | production | testing
ENVIRONMENT=development

# База данных PostgreSQL
# Для Docker Compose (рекомендуется для разработки):
DATABASE_URL=postgresql://pokerbot:pokerbot_dev@postgres:5432/pokerbot_db

# Для локального запуска (PostgreSQL на localhost):
# DATABASE_URL=postgresql://pokerbot:pokerbot_dev@localhost:5432/pokerbot_db

# Для локального запуска с Docker (порт 5433):
# DATABASE_URL=postgresql://pokerbot:pokerbot_dev@localhost:5433/pokerbot_db

# Для облачной БД (Neon, Supabase и т.д.):
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Пароль PostgreSQL (для docker-compose)
POSTGRES_PASSWORD=pokerbot_dev


# Redis Cache
# Для Docker Compose (рекомендуется):
REDIS_URL=redis://redis:6379/0
# Для локального запуска:
# REDIS_URL=redis://localhost:6379/0
# Для облачного Redis:
# REDIS_URL=redis://user:password@host:port/0

# API Аутентификация
# Простой API ключ (опционально, для базовой аутентификации)
# Если не указан, аутентификация не требуется
# Для генерации безопасного ключа:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=
# Логирование
# Путь к файлу логов (если не указан, только консоль)
# LOG_FILE=logs/poker_bot.log

# Уровень логирования: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# API Настройки
# Хост для API (по умолчанию 0.0.0.0)
API_HOST=0.0.0.0

# Порт для API (по умолчанию 8000)
API_PORT=8000

# CORS origins (разделенные запятыми, * для всех)
# В production укажите конкретные домены!
CORS_ORIGINS=*

# ============================================
# Rate Limiting
# ============================================
# Количество запросов в минуту на IP
RATE_LIMIT_PER_MINUTE=120

# ============================================
# Training (MCCFR)
# ============================================
# Количество процессов для обучения (multiprocessing)
TRAINING_PROCESSES=4

# Интервал сохранения чекпоинтов (итераций)
CHECKPOINT_INTERVAL=2000

# Путь к директории с чекпоинтами
CHECKPOINTS_DIR=checkpoints

# ============================================
# Мониторинг
# ============================================
# Prometheus metrics endpoint включен по умолчанию
# METRICS_ENABLED=true

# ============================================
# Безопасность (Production)
# ============================================
# В production обязательно измените:
# - API_KEY на сильный случайный ключ
# - POSTGRES_PASSWORD на сложный пароль
# - DATABASE_URL с реальными credentials
# - REDIS_URL с реальными credentials
# - CORS_ORIGINS на конкретные домены

# ============================================
# Интеграция с pluribus-poker-AI
# ============================================
# URL для интеграции с pluribus client
# PLURIBUS_API_URL=http://localhost:8000
